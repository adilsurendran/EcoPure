# ===============================
# SERVER CONFIG
# ===============================
PORT=8000
NODE_ENV=development

# ===============================
# DATABASE
# ===============================
MONGO_URI=mongodb://127.0.0.1:27017/EcoPure

# ===============================
# JWT / AUTH
# ===============================
ACCESS_TOKEN_SECRET=ecopure_access_token_secret_very_strong_2026
REFRESH_TOKEN_SECRET=ecopure_refresh_token_secret_ultra_strong_2026

# Token lifetimes (optional, if you want config-driven control)
ACCESS_TOKEN_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# ===============================
# COOKIE SETTINGS
# ===============================
COOKIE_SECURE=false
COOKIE_SAMESITE=strict

# ===============================
# CORS
# ===============================
CLIENT_URL=http://localhost:5173

# ===============================
# FILE UPLOADS (FUTURE USE)
# ===============================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
